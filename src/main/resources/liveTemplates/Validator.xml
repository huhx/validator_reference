    toReformat="false"
    toShortenFQNames="false">
    <variable
      name="ACTION"
      expression=""
      defaultValue=""
      alwaysStopAt="true"/>
    <context>
      <option name="VALIDATOR" value="true"/>
    </context>
  </template>

</templateSet>
