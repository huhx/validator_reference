      name="ACTION"
      expression=""
      defaultValue=""
      alwaysStopAt="true"/>
    <context>
      <option name="VALIDATOR" value="true"/>
    </context>
  </template>

  <template
    name="les"
    value="@LoggableEvent(applicationTier = SERVICE, action = $ACTION$)"
